
@{
    Layout = null;
}

@model IEnumerable<UCMS.WebSite.Models.SysNoticeModels.SysNoticeModel>
<!DOCTYPE html>
<!--[if IE 8]> <html lang="zh" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="zh" class="ie9"> <![endif]-->
