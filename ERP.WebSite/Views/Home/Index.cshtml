        .breadcrumb > div {
            cursor: pointer;
            padding: 3px;
            line-height: 25px;
            display: inline-block;
            line-height: 25px;
        }

        .tab .nav_item {
            border: solid 1px #ccc5cc;
            line-height: 25px;
            padding: 3px 5px 3px 10px;
            display: inline-block;
            cursor: pointer;
            border-radius: 4px;
            background-color: #EFEFEF;
            /*background-image: -webkit-gradient(linear, 0 0%, 0 100%, from(#FDFDFD), to(#EAEAEA));*/
        }

        .item_show {
            display: inline-block;
            width: 100%;
        }

        .item_hide {
            display: none;
        }

        .nav_close {
            margin-left: 3px;
            padding: 0px 2px 0px 2px;
        }

            .nav_close:hover {
                margin-left: 3px;
                background-color: red;
                background-color: #e66565;
                color: white;
                padding: 0px 2px 0px 2px;
            }

        #GlobalLanguage {
            width: auto;
            margin-top: 5px;
        }
    </style>
</head>
